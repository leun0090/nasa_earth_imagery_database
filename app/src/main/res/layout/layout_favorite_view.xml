<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">


    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/map"
        android:scaleType="centerInside" />


    <ImageView
        android:id="@+id/loc_star"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/star"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/loc_star2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toRightOf="@+id/loc_star"
        android:layout_alignTop="@+id/loc_star"
        android:background="@drawable/star"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/loc_star3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toRightOf="@+id/loc_star2"
        android:layout_alignTop="@+id/loc_star2"
        android:background="@drawable/star"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/loc_star4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toRightOf="@+id/loc_star3"
        android:layout_alignTop="@+id/loc_star3"
        android:background="@drawable/star"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/loc_star5"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toRightOf="@+id/loc_star4"
        android:layout_alignTop="@+id/loc_star4"
        android:background="@drawable/star"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/mapTitle"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/mapImage"
        android:layout_alignTop="@+id/mapImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:text="This is Title"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/mapDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapTitle"
        android:layout_alignLeft="@+id/mapTitle"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/map_description"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="This is description of map"
        android:textSize="18dp" />
</RelativeLayout>